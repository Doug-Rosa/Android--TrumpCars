<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/metal_bg" >
    
    <ImageView
        android:id="@+id/ivTopScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/top_scores"
        android:contentDescription="@string/scoreboard_logo_desc" />
    
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivTopScores"
        android:orientation="vertical"
        android:background="#66000000"
        android:stretchColumns="*">
       
        <TableRow android:layout_height="1px" android:background="#BDBDBD">
   			<TextView android:layout_span="2" android:layout_height="1px" 
            	 android:layout_width="fill_parent" android:text="">
  			 </TextView>
		</TableRow>
        
		<TableRow>
	        <TextView 
	            android:id="@+id/tvScoreName1"
	            android:textSize="24sp"
	            android:textColor="@color/darkblue"
	            android:layout_gravity="center"/>
	        
	        <TextView 
	            android:id="@+id/tvScore1"
	            android:textSize="24sp"
	            android:textColor="@color/darkblue"
	            android:layout_gravity="center"/>
	        
	     </TableRow>
	     
		<TableRow android:layout_height="1px" android:background="#BDBDBD">
   			<TextView android:layout_span="2" android:layout_height="1px" 
            	 android:layout_width="fill_parent" android:text="">
  			 </TextView>
		</TableRow>
        
		<TableRow >
		    
	        <TextView 
	            android:id="@+id/tvScoreName2"
	            android:textSize="24sp"
	            android:textColor="@color/darkblue"
	            android:layout_gravity="center"/>
	        
	        <TextView 
	            android:id="@+id/tvScore2"
	            android:textSize="24sp"
	            android:textColor="@color/darkblue"
	            android:layout_gravity="center"/>
	        
	    </TableRow>
	    
		<TableRow android:layout_height="1px" android:background="#BDBDBD">
   			<TextView android:layout_span="2" android:layout_height="1px" 
            	 android:layout_width="fill_parent" android:text="">
  			 </TextView>
		</TableRow>
        
		<TableRow >
		    
	        <TextView 
	            android:id="@+id/tvScoreName3"
	            android:textSize="24sp"
	            android:textColor="@color/darkblue"
	            android:layout_gravity="center"/>
	        
	        <TextView 
	            android:id="@+id/tvScore3"
	            android:textSize="24sp"
	            android:textColor="@color/darkblue"
	            android:layout_gravity="center"/>
	        
	    </TableRow>
	    
		<TableRow android:layout_height="1px" android:background="#BDBDBD">
   			<TextView android:layout_span="2" android:layout_height="1px" 
            	 android:layout_width="fill_parent" android:text="">
  			 </TextView>
		</TableRow>
        
		<TableRow >
		    
	        <TextView 
	            android:id="@+id/tvScoreName4"
	            android:textSize="24sp"
	            android:textColor="@color/darkblue"
	            android:layout_gravity="center"
	            />
	        
	        <TextView 
	            android:id="@+id/tvScore4"
	            android:textSize="24sp"
	            android:textColor="@color/darkblue"
	            android:layout_gravity="center"/>
	        
	    </TableRow>
	    
		<TableRow android:layout_height="1px" android:background="#BDBDBD">
   			<TextView android:layout_span="2" android:layout_height="1px" 
            	 android:layout_width="fill_parent" android:text="">
  			 </TextView>
		</TableRow>
        
		<TableRow >
		    
	        <TextView 
	            android:id="@+id/tvScoreName5"
	            android:textSize="24sp"
	            android:textColor="@color/darkblue"
	            android:layout_gravity="center"/>
	        
	        <TextView 
	            android:id="@+id/tvScore5"
	            android:textSize="24sp"
	            android:textColor="@color/darkblue"
	            android:layout_gravity="center"/>
        
        </TableRow>
        
		<TableRow android:layout_height="1px" android:background="#BDBDBD">
   			<TextView android:layout_span="2" android:layout_height="1px" 
            	 android:layout_width="fill_parent" android:text="">
  			 </TextView>
		</TableRow>
		
		<Button 
		    android:id="@+id/btnResetScore"
		    android:layout_marginLeft="80dp"
		    android:layout_marginRight="80dp"
		    android:layout_marginTop="5dp"
		    android:layout_marginBottom="5dp"
		    android:textSize="18sp"
		    android:textColor="@color/darkblue"
		    android:background="@drawable/btn_bg"
		    android:text="@string/scoreboard_reset_btn_desc"
		    android:onClick="onClickReset"/>
        
    </TableLayout>

</RelativeLayout>
